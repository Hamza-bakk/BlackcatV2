<div class="flex flex-wrap justify-center mt-12 mb-12">
  <div class="w-full md:w-1/2 px-4 mb-4">
    <div class="rounded-lg shadow-md overflow-hidden card-bg-custom-color p-4 flex">
      <div class="w-1/3">
        <%= image_tag("chat1.jpg", alt: "Image de contact", class: "w-full h-full object-cover") %>
      </div>
      <div class="w-2/3 pl-4">
        <h2 class="text-lg text-center font-semibold mb-4">Contactez-nous</h2>
        <h1 class="text-center text-lg mb-4">Pour plus d'informations ou questions remplissez ce formulaire :</h1>
        <form>
          <label for="name">Nom :</label>
          <input type="text" id="name" name="name" class="w-full mb-2 p-2 rounded border">
          <label for="email">Email :</label>
          <input type="email" id="email" name="email" class="w-full mb-2 p-2 rounded border">
          <label for="message">Message :</label>
          <textarea id="message" name="message" class="w-full mb-4 p-2 rounded border"></textarea>
            <button type="submit" class="bg-gray-500 hover:bg-gray-400 text-white font-semibold py-2 px-4 rounded-full">
              Envoyer
            </button>
        </form>
      </div>
    </div>
  </div>
</div>
