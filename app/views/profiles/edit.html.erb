<div class="flex justify-center items-center h-screen">
  <div class="w-full max-w-md px-4">
    <div class="bg-white shadow-md rounded px-8 py-6">
      <h2 class="text-2xl font-semibold text-center mb-4">Modifier le profil</h2>

      <%= form_for(@user, url: profile_path, method: :patch, html: { multipart: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: @user %>

        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.email_field :email, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline transition duration-300 hover:border-blue-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.text_field :first_name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline transition duration-300 hover:border-blue-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.text_field :last_name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline transition duration-300 hover:border-blue-500" %>
        </div>

        <div class="flex items-center justify-center mt-4">
          <%= f.submit "Mettre Ã  jour", class: "bg-gray-500 hover:bg-gray-400 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>

      <%= link_to "Retour", :back, class: "mt-4 text-blue-500 hover:text-blue-700 font-semibold" %>
    </div>
  </div>
</div>
