<div class="rounded-3xl overflow-hidden shadow-xl max-w-xl mx-auto my-3 card-bg-custom-color p-6">
  <img src="/assets/chat3.jpg" class="w-full" />
  <div class="flex justify-center -mt-8">
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, alt: 'avatar', class: "rounded-full border-solid border-white border-2 -mt-3 h-16 w-16" %>
    <% else %>
      <img src="/assets/default_avatar.png" class="rounded-full border-solid border-white border-2 -mt-3 h-16 w-16">
    <% end %>
  </div>
  <div class="text-center px-3 py-6">
    <h3 class="text-black text-lg font-semibold"><%= @user.first_name %> <%= @user.last_name %></h3>
    <p class="mt-2 font-light text-black"><%= @user.email %></p>
  </div>
  <div class="flex justify-between pb-3 text-white">
    <%= link_to "Modifier le profil", edit_profile_path, class: "bg-gray-500 hover:bg-gray-400 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:shadow-outline text-sm" %>
    <%= link_to "Modifier le Mot de passe", edit_user_registration_path, class: "bg-green-500 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:shadow-outline text-sm" %>
    <%= link_to "Mes Commandes", "#", class: "bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:shadow-outline text-sm" %>
  </div>
</div>
